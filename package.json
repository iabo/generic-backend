{
  "name": "emailer-backend",
  "version": "1.0.0",
  "description": "backend for Emailer Backend service",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "lint": "eslint src --ext .js",
    "lint:fix": "npm run lint -- --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js",
    "exec": "node --inspect=0.0.0.0:7489 ./"
  },
  "_moduleAliases": {
    "#api": "src/api",
    "#test": "src/test",
    "#database": "src/database",
    "#services": "src/services",
    "#email": "src/email",
    "#utils": "src/utils",
    "#redis": "src/redis",
    "#keys": "src/keys"
  },
  "author": "Yabdul Abdala",
  "license": "0BSD",
  "devDependencies": {
    "nodemon": "^2.0.20",
    "eslint": "^8.34.0",
    "@getify/eslint-plugin-proper-arrows": "^11.0.3"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@mailchimp/mailchimp_transactional": "^1.0.50",
    "argon2": "^0.30.3",
    "await-of": "^3.1.1",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "handlebars": "^4.7.7",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "joi-phone-number": "^5.1.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.3.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-logger": "^3.2.1",
    "koa-respond": "^2.1.0",
    "koa-static": "^5.0.0",
    "link-module-alias": "^1.2.0",
    "logger": "^0.0.1",
    "mailchimp": "^1.2.1",
    "mysql2": "^2.3.3",
    "oauth2-server": "^3.1.1",
    "objection": "^3.0.1",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "redlock": "^4.2.0",
    "sanitize-html": "^2.8.1",
    "koa-passport": "^6.0.0",
    "passport-oauth2": "1.6.1",
    "koa-session": "^6.4.0"
  }
}
